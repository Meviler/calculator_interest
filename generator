loan_amount_a = float(input("Enter Loan amount: "))
apr_rate_a = float(input("Entre Rate: "))
print()
for i in range(10):
    round_amount_a = round(loan_amount_a, 2)
    loan_amount_a += (loan_amount_a * apr_rate_a)
    print("Year:", i+1, "amount is: ", end="")
    for line in str(round_amount_a):
        print(line, end ="")
        time.sleep(0.1)
    print("\33[1;30m\n....Loading \33[0m")
    time.sleep(0.7)
